    {
      "src": "/img/personalize.png",
      "type": "image/png",
      "label": "Personalize your experience"
    }
  ],
  "shortcuts": [
    {
      "name": "Open Impostor",
      "short_name": "Impostor",
      "description": "Open Impostor with one click",
      "url": "/index.html?open=chat",
      "icons": [
        {
          "src": "/img/android.png",
          "sizes": "1024x1024",
          "type": "image/png"
        }
      ]
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
