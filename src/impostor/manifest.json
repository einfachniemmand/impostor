{
  "name": "Impostor by Benno",
  "short_name": "Impostor",
  "start_url": "/index.html",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#000000",
  "theme_color": "#fc3208",
  "description": "A mock-up of the popular game made by the splash games team",
  "dir": "ltr",
  "lang": "en-US",
  "scope": "/",
  "categories": ["game", "fun", "tools"],
  "prefer_related_applications": true,
  "related_applications": [
    {
      "platform": "github",
      "url": "https://github.com/einfachniemmand/impostor",
      "id": "com.benn.impostor"
    }
  ],
  "icons": [
    {
      "src": "/img/android.png",
      "sizes": "1024x1024",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "/img/screenshot.png",
      "type": "image/png",
      "label": "Choose a game"
